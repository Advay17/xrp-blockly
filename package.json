{
  "name": "First+ IDE",
  "version": "0.0.1",
  "description": "First+ IDE",
  "main": "app/electron/main.js",
  "scripts": {
    "test": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "electron:package:mac": "electron-builder -m -c.extraMetadata.main=app/electron/main.js",
    "electron:package:win": "electron-builder -w -c.extraMetadata.main=app/electron/main.js",
    "electron:package:linux": "electron-builder -l -c.extraMetadata.main=app/electron/main.js"
  },
  "author": "FirstPlus",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3"
  },
  "dependencies": {
    "async-polling": "^0.2.1",
    "bootstrap": "^5.2.0",
    "drivelist": "^11.0.0",
    "electron-reloader": "^1.2.3",
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
	        "icon":"app/fp-icon"
	      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fp_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "appId": "com.electron.firstplus",
    "productName": "First+ IDE",
    "files": ["**/*", "node_modules/**/*"],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
