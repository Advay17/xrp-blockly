{
  "name": "XRP-Blockly",
  "version": "0.1.0",
  "description": "XRP Blockly",
  "main": "app/electron/main.js",
  "scripts": {
    "test": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "electron:package:mac": "electron-builder -m -c.extraMetadata.main=app/electron/main.js",
    "electron:package:win": "electron-builder -w -c.extraMetadata.main=app/electron/main.js",
    "electron:package:linux": "electron-builder -l -c.extraMetadata.main=app/electron/main.js",
    "pack": "electron-builder --dir"
  },
  "author": "XRP <gr-XRP@wpi.edu>",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "electron": "^30.0.8"
  },
  "dependencies": {
    "async-polling": "^0.2.1",
    "bootstrap": "^5.2.0",
    "drivelist": "^11.0.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "fs-extra": "^11.1.1",
    "serialport": "^10.5.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "app/xrp-icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "xrp_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "appId": "com.electron.xrp",
    "productName": "XRP Blockly",
    "files": [
      "**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
